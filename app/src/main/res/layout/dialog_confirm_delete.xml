<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/deleteConfirmDialog"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/light_grey">

    <!--  Dialog Header  -->
    <TextView
        android:id="@+id/deleteConfirmDialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Recipe?"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>

    <!--  Dialog message  -->
    <TextView
        android:id="@+id/deleteConfirmDialogMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you sure you want to delete this recipe?"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <!--  Buttons setup  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!--  Confirm Button  -->
        <Button
            android:id="@+id/confirmDeleteButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"/>

        <!--  Cancel Button  -->
        <Button
            android:id="@+id/cancelDeleteButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_weight="1"
            android:layout_marginStart="8dp"/>

    </LinearLayout>
</LinearLayout>